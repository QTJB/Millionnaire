<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Millionaire"
        android:textColor="@android:color/black"
        android:textSize="45dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Federation University"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/information1"
        />

    <Button
        android:id="@+id/game"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Millionaire"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_buttom_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/hotSeat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Hot Seat"
        android:textColor="@android:color/holo_red_light"
        android:background="@drawable/btn_buttom_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="388dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/lifelines"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Lifelines"
        android:background="@drawable/btn_buttom_blue"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotSeat"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/information1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hanlin Zheng"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>