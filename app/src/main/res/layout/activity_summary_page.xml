<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryPage">

    <TextView
        android:id="@+id/summaryInform"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Congratulation! You won:"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/verticalMiddle"
        app:layout_constraintEnd_toEndOf="@+id/verticalMiddle"
        app:layout_constraintBottom_toTopOf="@+id/horizontal02"
        />

    <TextView
        android:id="@+id/summaryInform1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="$ 1M"
        android:textColor="@android:color/holo_red_light"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="@+id/verticalMiddle"
        app:layout_constraintEnd_toEndOf="@+id/verticalMiddle"
        app:layout_constraintTop_toBottomOf="@+id/horizontal02"
        android:layout_marginTop="50dp"
         />

    <EditText
        android:id="@+id/txtInputName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Please input name here"
        app:layout_constraintTop_toBottomOf="@id/horizontal05"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save and return"
        app:layout_constraintTop_toBottomOf="@id/horizontal05"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_buttom_blue"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginEnd="10dp"/>

    <Button
        android:id="@+id/summaryBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintStart_toStartOf="@+id/verticalMiddle"
        app:layout_constraintEnd_toEndOf="@+id/verticalMiddle"
        app:layout_constraintTop_toTopOf="@+id/horizontal09"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal09"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>